<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.invex.invex.LoginController"
            style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e);">

    <center>
        <VBox alignment="CENTER" spacing="15">
            <VBox spacing="12" alignment="CENTER"
                  style="-fx-background-color: white;
                         -fx-padding: 30;
                         -fx-background-radius: 12;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0, 0, 5);">

                <Label text="Welcome to Invex" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <Label text="Login"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                <TextField fx:id="usernameField" promptText="Username"
                           style="-fx-background-radius: 6; -fx-padding: 8;" />

                <PasswordField fx:id="passwordField" promptText="Password"
                               style="-fx-background-radius: 6; -fx-padding: 8;" />

                <Button text="Login" onAction="#onLogin"
                        style="-fx-background-color: #3498db;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 6;
                               -fx-padding: 8 20;" />
            </VBox>
        </VBox>
    </center>

</BorderPane>
